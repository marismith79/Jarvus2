{
  "name": "jarvus-desktop",
  "version": "1.0.0",
  "description": "Jarvus Desktop App with Floating Control Bar",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "desktop",
    "floating",
    "control"
  ],
  "author": "Jarvus Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "keytar": "^7.9.0",
    "playwright": "^1.53.2"
  },
  "build": {
    "appId": "com.jarvus.desktop",
    "productName": "Jarvus Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
